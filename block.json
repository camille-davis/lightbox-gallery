{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"name": "lightbox-gallery/gallery",
	"title": "Lightbox Gallery",
	"category": "media",
	"allowedBlocks": [ "core/image" ],
	"description": "Image gallery grid with lightbox and left-right navigation.",
	"keywords": [ "images", "photos", "gallery", "lightbox" ],
	"textdomain": "lightbox-gallery",
	"attributes": {
		"allowResize": {
			"type": "boolean",
			"default": false
		},
		"templateLock": {
			"type": [ "string", "boolean" ],
			"enum": [ "all", "insert", "contentOnly", false ],
			"default": false
		}
	},
	"providesContext": {
		"allowResize": "allowResize"
	},
	"supports": {
		"anchor": true,
		"html": false,
		"align": false,
		"units": [ "px", "em", "rem", "vh", "vw" ],
		"spacing": {
			"margin": true,
			"padding": true
		},
		"color": {
			"text": false,
			"background": true,
			"gradients": true
		},
		"layout": {
			"allowVerticalAlignment": false,
			"allowOrientation": false,
			"default": {
				"type": "flex",
				"orientation": "horizontal"
			}
		}
	},
	"style": "file:./style.css"
}

