{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"name": "lightbox-gallery/gallery",
	"title": "Lightbox Gallery",
	"category": "media",
	"allowedBlocks": [ "core/image" ],
	"description": "Display multiple images in a gallery grid (lightbox functionality coming soon).",
	"keywords": [ "images", "photos", "gallery", "lightbox" ],
	"textdomain": "lightbox-gallery",
	"attributes": {
		"allowResize": {
			"type": "boolean",
			"default": false
		},
		"sizeSlug": {
			"type": "string",
			"default": "large"
		}
	},
	"providesContext": {
		"allowResize": "allowResize"
	},
	"supports": {
		"anchor": true,
		"align": true,
		"__experimentalBorder": {
			"radius": true,
			"color": true,
			"width": true,
			"style": true,
			"__experimentalDefaultControls": {
				"color": true,
				"radius": true
			}
		},
		"html": false,
		"units": [ "px", "em", "rem", "vh", "vw" ],
		"spacing": {
			"margin": true,
			"padding": true,
			"blockGap": [ "horizontal", "vertical" ],
			"__experimentalSkipSerialization": [ "blockGap" ],
			"__experimentalDefaultControls": {
				"blockGap": true,
				"margin": false,
				"padding": false
			}
		},
		"color": {
			"text": false,
			"background": true,
			"gradients": true
		},
		"layout": {
			"allowSwitching": false,
			"allowInheriting": false,
			"allowEditing": false,
			"default": {
				"type": "flex"
			}
		}
	},
	"editorStyle": "file:./editor.css",
	"style": "file:./style.css"
}

